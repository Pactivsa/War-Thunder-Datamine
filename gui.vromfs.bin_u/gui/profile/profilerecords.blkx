{
  "margin-top": "2@blockInterval",
  "tdiv": {
    "flow": "horizontal",
    "size": "pw, 8@blockInterval",
    "position": "relative",
    "bgcolor": "@evenTrColor",
    "margin-bottom": "2@blockInterval",
    "HorizontalListBox": {
      "id": "modes_list",
      "fullTransparent": "yes",
      "bottomSelectLine": "yes",
      "navigatorShortcuts": "yes",
      "move-only-hover": "yes",
      "on_select": "onStatsModeChange"
    },
    "tdiv": {
      "size": "450@sf/@pf, ph",
      "position": "absolute",
      "left": "pw-w-1@blockInterval",
      "popupFilter": {
        "margin-right": "1@blockInterval",
        "valign": "center"
      },
      "EditBox": {
        "id": "filter_edit_box",
        "width": "fw",
        "on_change_value": "applyFilter",
        "on_cancel_edit": "onFilterCancel",
        "text": "",
        "edit-hint": "#contacts/search_placeholder",
        "valign": "center"
      }
    }
  },
  "table": {
    "id": "airs_stats_table",
    "width": "pw",
    "height": "fh",
    "pos": "0.5pw-0.5w, 0",
    "position": "relative",
    "class": "lbTable",
    "higlightRowOnHover": "yes",
    "text-valign": "center"
  },
  "animated_wait_icon": {
    "id": "stats_loading",
    "pos": "50%pw-50%w, 50%ph-50%h",
    "position": "absolute",
    "background-rotation": "0"
  }
}